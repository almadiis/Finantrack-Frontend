<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil de Usuario"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#6200EE"
            android:layout_marginBottom="24dp" />

        <!-- SPINNER DE CUENTAS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuenta bancaria"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- BOTÓN SELECCIONAR CUENTA -->
        <Button
            android:id="@+id/btnSeleccionarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Cuenta"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="12dp" />

        <!-- BOTÓN CREAR CUENTA -->
        <Button
            android:id="@+id/btnCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear nueva cuenta"
            android:textColor="#6200EE"
            android:backgroundTint="@android:color/transparent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginBottom="24dp" />

        <!-- NOMBRE -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="12dp" />

        <!-- CORREO -->
        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="24dp" />

        <!-- GUARDAR CAMBIOS -->
        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:backgroundTint="#03DAC5"
            android:layout_marginBottom="16dp" />

        <!-- CERRAR SESIÓN -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5252" />
    </LinearLayout>
</ScrollView>
